{
  "name": "industrial-inventory-api",
  "version": "1.0.0",
  "description": "API REST para sistema de inventario industrial con Clean Architecture",
  "main": "dist/presentation/expressServer/index.js",
  "scripts": {
    "dev": "tsx watch src/presentation/expressServer/index.ts",
    "build": "tsc",
    "start": "node dist/presentation/expressServer/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:ts": "tsx tests/integration/api/test-exhaustive-complete.ts",
    "docker": "docker compose",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down -v && docker compose up -d",
    "db:fix": "docker compose exec inventory-db psql -U postgres -d inventory_db -f /docker-entrypoint-initdb.d/fix-partitions.sql",
    "db:indexes": "docker compose exec inventory-db psql -U postgres -d inventory_db -f /docker-entrypoint-initdb.d/create-audit-log-indexes.sql",
    "format": "prettier --write .",
    "lint": "eslint src --fix",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "postinstall": "husky install"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "postgresql",
    "clean-architecture",
    "inventory"
  ],
  "author": "Daisy Castillo",
  "license": "MIT",
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.4",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.7",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}