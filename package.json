{
  "name": "industrial-inventory-api",
  "version": "1.0.0",
  "description": "API REST para sistema de inventario industrial con Clean Architecture",
  "main": "dist/presentation/expressServer/index.js",
  "scripts": {
    "// 1. Docker y Base de Datos": "",
    "// 1.1 Orden: docker:build -> docker:up -> docker:db:init": "",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:db:init": "docker compose exec inventory-db psql -U postgres -d inventory_db -f /docker-entrypoint-initdb.d/init.sql",
    "docker:db:reset": "pnpm run docker:down && pnpm run docker:clean && pnpm run docker:up && sleep 5 && pnpm run docker:db:init",
    "docker:down": "docker compose down",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "docker:rebuild": "docker compose down -v --remove-orphans && docker compose up -d --build",
    "docker:restart": "docker compose restart",
    "// 2. Construcción y ejecución": "",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/presentation/expressServer/index.js",
    "dev": "NODE_OPTIONS='-r tsconfig-paths/register' tsx watch src/presentation/expressServer/index.ts",
    "// 3. Calidad de código (pre-commit)": "",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "postinstall": "husky install",
    "prepare": "husky install",
    "// 4. Testing (pre-commit)": "",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:endpoints:sh": "./scripts/test-endpoints.sh",
    "test:endpoints:quick": "node scripts/quick-test.js",
    "test:endpoints:api": "node scripts/test-api.js"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "postgresql",
    "clean-architecture",
    "inventory",
    "industrial"
  ],
  "author": "Daisy Castillo",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.4",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.7",
    "@types/pg": "^8.10.9",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}