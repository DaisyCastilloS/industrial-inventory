{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@shared/*": ["src/shared/*"],
            "@core/*": ["src/core/*"],
            "@infrastructure/*": ["src/infrastructure/*"],
            "@presentation/*": ["src/presentation/*"]
        }
    },
    "include": [
        "src"
    ]
}